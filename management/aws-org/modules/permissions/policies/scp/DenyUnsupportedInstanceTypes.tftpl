{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyUnsupportedInstanceTypes",
      "Effect": "Deny",
      "Action": "ec2:RunInstances",
      "Resource": [
        "arn:aws:ec2:*:*:instance/*"
      ],
      "Condition": {
        "StringNotEquals": {
          "ec2:InstanceType": ${jsonencode(supported_types)}
        }
      }
    }
  ]
}